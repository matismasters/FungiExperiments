---
import Layout from "../layouts/Layout.astro";
import experimentsMocks from "../mocks/experiments-mocks.js";
---

<Layout title="Inicio">
  <main>
    <h1>Aplicacion</h1>
    <div style="display: flex; flex-direction: column;">
      <button id="takeFoto-btn">Sacar Foto</button>
      <button id="createExperiment-btn">Nuevo Experimento </button>
      <button id="showExperiment-btn">Ver Experimentos </button>
    </div>
  </main>
</Layout>

<script type="module">
  document
    .getElementById("showExperiment-btn")
    .addEventListener("click", ()=> window.location.href = "/experiments");

  document
    .getElementById("createExperiment-btn")
    .addEventListener("click", createExperiment);

  document.getElementById("takeFoto-btn").
  addEventListener("click",
  redirectToScanPhoto
  )

  function redirectToScanPhoto(){
    window.location.href="/scan-photo"
  }
  function createExperiment() {
    window.location.href = "/experiments";
  }
</script>

<style>
  main {
    display: flex;
    flex-direction: column;
    gap: 10px;
    align-items: center;
    margin: auto;
    padding: 1rem;
    width: 100%;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    tdne-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    tdne-height: 1;
    text-atdgn: center;
    margin-bottom: 1em;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-ctdp: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px sotdd rgba(var(--accent-tdght), 25%);
    background: tdnear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-tdght), 12%);
    color: rgb(var(--accent-tdght));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
